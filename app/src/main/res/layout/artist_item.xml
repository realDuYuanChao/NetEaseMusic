<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">


    <ImageView
        android:id="@+id/iv_artist_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_artist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="@color/dark"
        app:layout_constraintBottom_toTopOf="@+id/tv_artist_song_count"
        app:layout_constraintStart_toEndOf="@+id/iv_artist_profile"
        app:layout_constraintTop_toTopOf="@+id/iv_artist_profile" />

    <TextView
        android:id="@+id/tv_artist_song_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:textColor="@color/gray"
        android:textSize="@dimen/smaller"
        app:layout_constraintBottom_toBottomOf="@+id/iv_artist_profile"
        app:layout_constraintStart_toEndOf="@+id/iv_artist_profile"
        app:layout_constraintTop_toBottomOf="@+id/tv_artist_name" />
</androidx.constraintlayout.widget.ConstraintLayout>